# Development Dockerfile for backend
FROM node:18-alpine

WORKDIR /app

# Install nodemon globally for hot reload
RUN npm install -g nodemon

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Expose port
EXPOSE 3000 9090

# Start development server with nodemon
CMD ["nodemon", "src/server.js"]

